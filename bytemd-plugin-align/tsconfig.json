{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ES6",
    "outDir": "dist"
  },
  "exclude": [
    "**/__tests__",
    "node_modules",
    "dist"
  ],
  "include": ["src/*", "*.d.ts","src/locales/*.json","src/**/*.*","src/**/*.ts"],
}
